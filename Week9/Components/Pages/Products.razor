@page "/products"
@using Week9.Data
@using Week9.Components

<h3>All Products</h3>

<a class="btn btn-primary mb-3" href="/products/add">Add Product</a>

@if (ProductStore.Products.Count == 0)
{
    <p>No products available.</p>
}
else
{
    <!-- Show all products using ProductCard -->
    @foreach (var p in ProductStore.Products)
    {
        <ProductCard Item="p" />
    }
}